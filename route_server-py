from flask import Flask, send_file, request
import threading
from ttsUtils import createInputFile, printToLog
from request_service import requestService
from db_handler import commit_to_audio, read_all_from_audio
from configs import config
from routeUtils import getArgs, return404, futureResourceLocation, getResourceLocation

############################
# Flask API server routing
# list and distribute wav files via API
###########################

app = Flask(__name__)

@app.route('/list')
def list():
   return read_all_from_audio()

@app.route('/<id>/get')
def getFile(id):
	try:
		return send_file(getResourceLocation(id))
	except Exception as e:
		printToLog(f"ERROR {e}")
		return return404()
      
@app.route('/request/<name>', methods=['POST'])
def createRequest(name):

	args = getArgs(name, request)

	createInputFile(args['dataSet'].decode('utf-8'), args['filename'])
	commit_to_audio(args)

	thread = threading.Thread(target=requestService, args=(args['filename'], config['path_to_input'], args['language']))
	thread.start()

	return futureResourceLocation(args)

if __name__ == '__main__':
   app.run()